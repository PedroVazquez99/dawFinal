@model taller_be.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="container mt-5">
    <!-- Título del formulario -->
    <div class="text-center mb-4">
        <h1 class="display-4 text-primary fw-bold">Crear Nuevo Usuario</h1>
        <p class="text-muted">Completa los campos para agregar un nuevo usuario al sistema.</p>
    </div>

    <!-- Formulario -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Campo Nombre -->
                        <div class="form-group mb-3">
                            <label asp-for="Nombre" class="form-label"></label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del usuario" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <!-- Campo Email -->
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="Ingrese el correo electrónico" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Campo Contraseña -->
                        <div class="form-group mb-3">
                            <label asp-for="PasswordHash" class="form-label"></label>
                            <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Ingrese la contraseña" />
                            <span asp-validation-for="PasswordHash" class="text-danger"></span>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Regresar
                            </a>
                            <button type="submit" class="btn btn-outline-primary">
                                <i class="fas fa-save"></i> Crear Usuario
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
