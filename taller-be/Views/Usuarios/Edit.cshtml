@model taller_be.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mt-5">
    <!-- Título -->
    <div class="text-center mb-4">
        <h1 class="display-4 text-primary fw-bold">Editar Usuario</h1>
        <p class="text-muted">Realiza los cambios necesarios y guarda la información.</p>
    </div>

    <!-- Formulario -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit" id="editForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <!-- Campo Nombre -->
                        <div class="form-group mb-3">
                            <label asp-for="Nombre" class="form-label"></label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <!-- Campo Email -->
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Ingrese el correo electrónico" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Campo Contraseña -->
                        <div class="form-group mb-3">
                            <label asp-for="PasswordHash" class="form-label"></label>
                            <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Ingrese la nueva contraseña" />
                            <span asp-validation-for="PasswordHash" class="text-danger"></span>
                        </div>

                        <!-- Campo Rol -->
                        <div class="form-group mb-3">
                            <label asp-for="Rol" class="form-label"></label>
                            <input asp-for="Rol" class="form-control" placeholder="Ingrese el rol del usuario" />
                            <span asp-validation-for="Rol" class="text-danger"></span>
                        </div>

                        <!-- Campo Fecha de Registro -->
                        <div class="form-group mb-3">
                            <label asp-for="FechaRegistro" class="form-label"></label>
                            <input asp-for="FechaRegistro" type="date" class="form-control" />
                            <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Regresar
                            </a>
                            <button type="submit" class="btn btn-outline-primary">
                                <i class="fas fa-save"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Mostrar confirmación al guardar cambios
        document.getElementById('editForm').addEventListener('submit', function (event) {
            event.preventDefault(); // Evitar el envío directo del formulario
            Swal.fire({
                title: 'Cambios guardados',
                text: 'La información del usuario se ha actualizado correctamente.',
                icon: 'success',
                confirmButtonColor: '#3085d6',
                confirmButtonText: 'Aceptar'
            }).then((result) => {
                if (result.isConfirmed) {
                    this.submit(); // Enviar el formulario después de confirmar
                }
            });
        });
    </script>
}
