@model taller_be.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
    string roleFilter = ViewData["RoleFilter"] as string ?? "";
}

<!-- Título centrado con separación -->
<h1 class="text-center mb-5">Editar Usuario</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <!-- Resumen de validación de errores -->
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <!-- Campo Nombre -->
                        <div class="form-group mb-3">
                            <label asp-for="Nombre" class="form-label"></label>
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre del usuario" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <!-- Campo Email -->
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="Correo electrónico" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Contraseña (visible pero no editable) -->
                        <div class="form-group mb-3" style="display:none;">
                            <label asp-for="PasswordHash" class="form-label"></label>
                            <input asp-for="PasswordHash" class="form-control" readonly="readonly" placeholder="Contraseña (no editable)" />
                            <span asp-validation-for="PasswordHash" class="text-danger"></span>
                        </div>

                        <!-- Campo Rol -->
                        <div class="form-group mb-3">
                            <label asp-for="Rol" class="form-label">Rol</label>
                            <select asp-for="Rol" class="form-control">
                                <option value="user" selected="@(roleFilter == "User")">Usuario</option>
                                <option value="admin" selected="@(roleFilter == "Admin")">Administrador</option>
                            </select>
                            <span asp-validation-for="Rol" class="text-danger"></span>
                        </div>

                        <!-- Fecha de Registro (visible pero no editable) -->
                        <div class="form-group mb-3" style="display:none;">
                            <label asp-for="FechaRegistro" class="form-label"></label>
                            <input asp-for="FechaRegistro" class="form-control" readonly="readonly" />
                            <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between mt-4">
                            <a class="btn btn-outline-secondary" asp-action="Index">
                                <i class="fas fa-arrow-left"></i> Volver a la lista
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
