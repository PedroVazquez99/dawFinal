@model taller_be.Models.Servicio

@{
    ViewData["Title"] = "Detalles del Servicio";
}

<!-- Título centrado y con separación -->
<h1 class="text-center mb-5">Detalles del Servicio</h1>

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h4>Información del Servicio</h4>
            <hr />

            <!-- Descripción en formato de lista -->
            <dl class="row">
                <dt class="col-sm-3">Nombre:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3">Descripción:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>

                <dt class="col-sm-3">Precio:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Precio)</dd>

                <dt class="col-sm-3">Duración:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Duracion)</dd>
            </dl>

            <!-- Botones de acción -->
            <div class="d-flex justify-content-between mt-4">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">
                    <i class="bi bi-pencil"></i> Editar
                </a>
                <a class="btn btn-secondary" asp-action="Index">
                    <i class="bi bi-arrow-left"></i> Volver a la lista
                </a>
            </div>
        </div>
    </div>
</div>
