@model taller_be.Models.Servicio

@{
    ViewData["Title"] = "Detalles del Servicio";
}

<div class="container mt-5">
    <!-- Título -->
    <div class="text-center mb-4">
        <h1 class="display-4 text-dark fw-bold">Detalles del Servicio</h1>
        <p class="text-muted">Visualiza la información completa del servicio.</p>
    </div>

    <!-- Card con detalles -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <i class="fas fa-cogs fa-3x"></i>
                    <h3 class="mt-2">Información del Servicio</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <!-- Nombre -->
                        <dt class="col-sm-4 text-secondary fw-bold">
                            <i class="fas fa-cogs me-2"></i> @Html.DisplayNameFor(model => model.Nombre)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>

                        <!-- Descripción -->
                        <dt class="col-sm-4 text-secondary fw-bold">
                            <i class="fas fa-info-circle me-2"></i> @Html.DisplayNameFor(model => model.Descripcion)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Descripcion)
                        </dd>

                        <!-- Precio -->
                        <dt class="col-sm-4 text-secondary fw-bold">
                            <i class="fas fa-dollar-sign me-2"></i> @Html.DisplayNameFor(model => model.Precio)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Precio)
                        </dd>

                        <!-- Duración -->
                        <dt class="col-sm-4 text-secondary fw-bold">
                            <i class="fas fa-clock me-2"></i> @Html.DisplayNameFor(model => model.Duracion)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Duracion)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <div class="d-flex justify-content-center">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Volver a la lista
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-primary me-2">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
