@model taller_be.Models.Servicio

@{
    ViewData["Title"] = "Crear Servicio";
}

<!-- Título centrado y con separación -->
<h1 class="text-center mb-5">Crear Servicio</h1>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h4>Servicio</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Nombre -->
            <div class="form-group mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre del servicio" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <!-- Descripción -->
            <div class="form-group mb-3">
                <label asp-for="Descripcion" class="form-label"></label>
                <input asp-for="Descripcion" class="form-control" placeholder="Ingresa la descripción del servicio" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <!-- Precio -->
            <div class="form-group mb-3">
                <label asp-for="Precio" class="form-label"></label>
                <input asp-for="Precio" class="form-control" placeholder="Ingresa el precio del servicio" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <!-- Duración -->
            <div class="form-group mb-3">
                <label asp-for="Duracion" class="form-label"></label>
                <input asp-for="Duracion" class="form-control" placeholder="Ingresa la duración del servicio (en horas: minutos)" />
                <span asp-validation-for="Duracion" class="text-danger"></span>
            </div>

            <!-- Botón de Crear -->
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-lg w-100">Crear Servicio</button>
            </div>
        </form>

        <div class="mt-3">
            <a class="btn btn-secondary w-100" asp-action="Index">Volver a la lista</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
