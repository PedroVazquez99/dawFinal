@model taller_be.Models.Servicio

@{
    ViewData["Title"] = "Eliminar Servicio";
}

<div class="container py-5">
    <!-- Título principal -->
    <h1 class="text-center text-danger mb-4">Eliminar Servicio</h1>
    <p class="text-center text-muted mb-4">Esta acción no se puede deshacer. Por favor, confirma que deseas proceder.</p>

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body">
                    <!-- Mensaje de confirmación -->
                    <h5 class="card-title text-center text-danger">¿Estás seguro de que deseas eliminar este servicio?</h5>
                    <p class="text-center text-muted mb-4">A continuación, se muestran los detalles del servicio:</p>

                    <!-- Detalles del servicio -->
                    <dl class="row mb-4">
                        <dt class="col-sm-4 text-end fw-bold">Nombre:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                        <dt class="col-sm-4 text-end fw-bold">Descripción:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>

                        <dt class="col-sm-4 text-end fw-bold">Precio:</dt>
                        <dd class="col-sm-8">$@Html.DisplayFor(model => model.Precio)</dd>

                        <dt class="col-sm-4 text-end fw-bold">Duración:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Duracion)</dd>
                    </dl>

                    <!-- Botones -->
                    <div class="d-flex justify-content-between align-items-center">
                        <!-- Formulario de confirmación -->
                        <form asp-action="Delete" method="post" class="flex-grow-1 me-2">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="bi bi-trash"></i> Eliminar
                            </button>
                        </form>

                        <!-- Enlace para cancelar -->
                        <a class="btn btn-secondary btn-sm" asp-action="Index">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
