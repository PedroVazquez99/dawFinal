@model taller_be.Models.Servicio

@{
    ViewData["Title"] = "Editar Servicio";
}

<!-- Título centrado con separación -->
<h1 class="text-center mb-5">Editar Servicio</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <!-- Campo Nombre -->
                        <div class="form-group mb-3">
                            <label asp-for="Nombre" class="form-label"></label>
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre del servicio" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <!-- Campo Descripción -->
                        <div class="form-group mb-3">
                            <label asp-for="Descripcion" class="form-label"></label>
                            <textarea asp-for="Descripcion" class="form-control" placeholder="Descripción del servicio" rows="4"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <!-- Campo Precio -->
                        <div class="form-group mb-3">
                            <label asp-for="Precio" class="form-label"></label>
                            <input asp-for="Precio" class="form-control" placeholder="Precio del servicio" />
                            <span asp-validation-for="Precio" class="text-danger"></span>
                        </div>

                        <!-- Campo Duración -->
                        <div class="form-group mb-3">
                            <label asp-for="Duracion" class="form-label"></label>
                            <input asp-for="Duracion" class="form-control" placeholder="Duración del servicio (en horas: minutos)" />
                            <span asp-validation-for="Duracion" class="text-danger"></span>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between mt-4">
                            <a class="btn btn-outline-secondary" asp-action="Index">
                                <i class="fas fa-arrow-left"></i> Volver a la lista
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
