@model taller_be.Models.Servicio

@{
    ViewData["Title"] = "Editar Servicio";
}

<!-- Título centrado con separación -->
<h1 class="text-center mb-4">Editar Servicio</h1>

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h4>Servicio</h4>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <!-- Campo Nombre -->
                <div class="form-group mb-3">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre del servicio" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <!-- Campo Descripción -->
                <div class="form-group mb-3">
                    <label asp-for="Descripcion" class="form-label"></label>
                    <input asp-for="Descripcion" class="form-control" placeholder="Descripción del servicio" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <!-- Campo Precio -->
                <div class="form-group mb-3">
                    <label asp-for="Precio" class="form-label"></label>
                    <input asp-for="Precio" class="form-control" placeholder="Precio del servicio" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <!-- Campo Duración -->
                <div class="form-group mb-3">
                    <label asp-for="Duracion" class="form-label"></label>
                    <input asp-for="Duracion" class="form-control" placeholder="Duración del servicio (en horas: minutos)" />
                    <span asp-validation-for="Duracion" class="text-danger"></span>
                </div>

                <!-- Botón de Guardar -->
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-success btn-lg w-100">
                        Guardar Cambios
                    </button>
                </div>
            </form>

            <!-- Botón para volver a la lista -->
            <div class="mt-3">
                <a class="btn btn-secondary w-100" asp-action="Index">
                    Volver a la lista
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
